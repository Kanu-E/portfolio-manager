<%= form_for @portfolio do |f| %>
  <% if portfolio.errors.any? %>
    <p>
      <ul>
        <% @portfolio.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </p>
  <% end %>

   <%= f.hidden_field :user_id %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :code %>
    <%= f.text_field :code %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
