<h1>Finances</h1>


<%= form_tag finances_path, :method => 'get' do%>
<%= text_field_tag :query, params[:query] %>
<%= submit_tag "Search"%>
<% end %>

<table>
  <thead>
    <tr>
      <th>Financial Asset Name</th> 
      
      <th>Ticker</th>

      <th>Current Value</th>
    
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @finances.each do |finance| %>
      <tr>
        <td><%= finance.name %></td>
         <td><%= link_to "#{finance.ticker}", finance %></td>
        <td>$<%= finance.current_value %></td>
        <td><%= link_to 'Edit', edit_finance_path(finance) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Finance', new_finance_path %>
